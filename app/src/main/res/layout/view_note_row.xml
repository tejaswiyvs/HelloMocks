<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/rounded_border_white"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/noteCellAppointmentStatusImg"
        android:layout_weight="0.1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:src="@drawable/appointment_completed"
        />
    <LinearLayout
        android:layout_weight="0.90"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <com.devspark.robototextview.widget.RobotoTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/noteCellPatientNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Melanie"
            android:textColor="@color/primary_text_color_dark"
            android:textStyle="normal"
            android:textSize="16dp"
            app:typeface="roboto_regular"
        />
        <com.devspark.robototextview.widget.RobotoTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/noteCellAppointmentTimeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="23 Jan 2015 - 11:22AM"
            android:textColor="@color/primary_text_color"
            android:textStyle="normal"
            android:textSize="16dp"
            app:typeface="roboto_regular"
            />

        <com.devspark.robototextview.widget.RobotoTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/notesCellPhysicianNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Dr. Amarfis Anahi Garcia Saint Hilaire, D.D.S - Pediatric Dentistry"
            android:textColor="@color/primary_text_color"
            android:textStyle="normal"
            android:textSize="16dp"
            app:typeface="roboto_regular"
            />

        <Button
            android:id="@+id/noteCellConsultSummaryBtn"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="2dp"
            android:background="@null"
            android:text="Read Consult Summary"
            android:textSize="12dp"
            android:textColor="@color/tertiary_accent"
            android:textStyle="bold"
            />

    </LinearLayout>


</LinearLayout>