<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".DashboardActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_border_white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_default_margin"
            android:text="@string/createAppointment"
            android:textColor="@color/primary_text_color"
            android:textSize="16dp"
            />
        <Spinner
            android:id="@+id/dashboardChildPickerSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="@dimen/activity_default_margin"
            android:background="@drawable/spinner_background"
            >
        </Spinner>
        <Spinner
            android:id="@+id/dashboardSpecialtyPickerSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="@dimen/activity_default_margin"
            android:background="@drawable/spinner_background">
        </Spinner>
        <Button
            android:id="@+id/dashboardSearchBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_default_margin"
            android:background="@drawable/primary_button"
            android:text="Search Physicians"
            android:textColor="@color/white"
            android:onClick="searchPhysiciansBtnClicked"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/dashboardAppointmentList"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/activity_default_margin"
        android:layout_marginBottom="@dimen/activity_default_margin"
        android:background="@drawable/rounded_border_white"
        />
    <ListView
        android:id="@+id/dashboardNotesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_default_margin"
        android:layout_marginBottom="@dimen/activity_default_margin"
        android:background="@drawable/rounded_border_white"
        />
</LinearLayout>
